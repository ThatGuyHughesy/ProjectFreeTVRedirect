{
  "name": "ProjectFreeTV Redirect",
  "version": "0.2",
  "description": "No More 10 Second Wait",
  "background": {
    "scripts": ["scripts/services/background.js", "scripts/services/redirect.js"]
  },
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "content_scripts": [{
    "matches": ["http://www.free-tv-video-online.info/*"],
    "js": ["scripts/controllers/check.js"]
  }],
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "home.html"
  },
  "manifest_version": 2,
  "permissions": ["activeTab"]
}